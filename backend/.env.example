PORT=3001
NODE_ENV=development

DATABASE_URL=postgres://postgres:postgres@localhost:5432/cobranca_saas

JWT_ACCESS_SECRET=change_me_access
JWT_REFRESH_SECRET=change_me_refresh
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=15d

# header para multitenant (ex: X-Company-Id)
TENANT_HEADER=x-company-id

# Asaas: pix depende de conta aprovada
ASAAS_BASE_URL=https://sandbox.asaas.com/api/v3
ASAAS_ALLOW_PIX=false

# WhatsApp (defaults globais, se nao usar BYO por empresa)
WHATSAPP_ENABLED=false
WHATSAPP_PROVIDER=meta
WHATSAPP_BASE_URL=https://graph.facebook.com/v20.0
WHATSAPP_ACCESS_TOKEN=change_me
WHATSAPP_PHONE_NUMBER_ID=change_me

# Email (SMTP)
EMAIL_ENABLED=false
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=change_me
SMTP_PASS=change_me
SMTP_FROM="CobrancaPro <no-reply@cobrancapro.com>"
SMTP_SECURE=false
